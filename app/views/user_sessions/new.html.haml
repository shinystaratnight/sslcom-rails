-title = current_subdomain==Reseller::SUBDOMAIN ? "Reseller login" : "Customer login"
-content_for :title, title
=render :partial => "shared/messages"
.reseller_registration_profile
  %h3=title
  %p Login to your SSL Reseller account to manage your SSL certificates
  -form_for @user_session, :url => user_session_path do |f|
    =f.error_messages
    #stylized.default_form
      .subheading Credentials
      =render :partial => "form", :object => f
      %p#forgot_username_or_password
        Forgot username or password?
        =link_to 'Click here.', new_password_reset_url
      %p#resend_activation
        Experiencing account activation problems?
        =link_to 'Click here to have activation notice resent.', activation_notice_users_url
    #button_container
      #next_submit=image_submit_tag "next_bl.gif"
