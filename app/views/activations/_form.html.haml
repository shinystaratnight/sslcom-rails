-@chpwd ||= false
-if @chpwd
  .clearfix
    = form.label :old_password, "Old Password"
    = password_field_tag :old_password, nil, :size=>30
.clearfix
  = form.label :password, "#{(@chpwd) ? 'New p' : 'P'}assword<span class='label_desc'>min. size 4 chars</span>".html_safe
  = form.password_field :password
.clearfix
  = form.label :password_confirmation, "#{(@chpwd) ? 'New p' : 'P'}assword again<span class='label_desc'>type the passward again</span>".html_safe
  = form.password_field :password_confirmation
