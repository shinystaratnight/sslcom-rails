%tr.line_item
  %td.description
    =cert.description_with_tier.blank? ? certificate_type(cert) : cert.description_with_tier
    -if cert.subject
      (
      %em>=cert.subject
      )
    !="[#{@certificate_orders.select{|co|co.certificate==cert.certificate}.map{|co|link_to(co.ref, co)}.join(', ')}]" if @certificate_orders
  %td.quantity
    =cert.line_item_qty || cert.quantity || "1"
  %td.price= cert.price.format
-if cert.migrated_from_v2? && !cert.v2_line_items.empty?
  -cert.v2_line_items.each do |item|
    %tr.line_item
      %td.description.subitem= item
      %td(colspan='2')
=render partial: "funded_accounts/row", locals: {cert: cert, colspan: '2'}


