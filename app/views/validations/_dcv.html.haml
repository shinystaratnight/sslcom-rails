%li
  %strong domain control validation
-if co.csr.domain_control_validations.last_sent.try(:email_address)
  -last_sent = co.csr.domain_control_validations.last_sent
  %li
    %em verification email sent to #{last_sent.email_address} on #{last_sent.sent_at.strftime("%b %d, %Y %R")}
  %li.category_border=link_to 'resend verification email', edit_certificate_order_validation_url(co)
-else
  %li
    %em no verification email has been sent
  %li.category_border=link_to 'send verification email', edit_certificate_order_validation_url(co)
