-content_for :title, "Applicant Information For Certificate Order #{@certificate_order.order.reference_number}"
=render :partial => '/certificate_orders/index_scripts'
-@certificate_content = @certificate_order.certificate_content
-pos=@certificate_order.preferred_payment_order=='prepaid' ? 2 : 3
=order_progress_indicator(pos, @certificate_order.certificate)
.order_container
  %h3 Applicant Information
  %p Please fill out the required fields below to complete your certificate order.
  =error_messages_for :certificate_order, :registrant
  -form_for @certificate_order do |f|
    #stylized.default_form
      =render :partial => "/certificate_orders/form", :locals => {:f=>f}
    #button_container
      #next_submit=image_submit_tag "next_bl.gif"