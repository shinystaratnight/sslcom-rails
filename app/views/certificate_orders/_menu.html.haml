-cn=co.subject || ''
%table(cellspacing="0")
  %tbody
    %tr.order_menu
      %td=link_to("certificate details", certificate_order_path(@ssl_slug, co), :title=>"view order for "+cn) if permitted_to?(:show, co)
      -unless hide_validation?(co)
        %td=link_to("validation status", certificate_order_validation_path(ssl_slug: @ssl_slug, certificate_order_id: co.ref), :title=>"view validation status for "+cn) if permitted_to?(:show, co.validation)
      %td=link_to("smart seal", certificate_order_site_seal_path(ssl_slug: @ssl_slug, certificate_order_id: co.ref), :title=>"get smart seal for "+cn) if permitted_to?(:show, co.site_seal)
      %td=link_to("transaction receipt", order_path(@ssl_slug, co.order), :title=>"get smart seal for "+cn) if permitted_to?(:show, co.order)
