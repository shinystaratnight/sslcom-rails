#account_status
  .quickbox
    .heading
      %strong Quick Links
    %ul
      %li=link_to 'Buy Certificate', certificates_url
      -if !current_user.is_system_admins? and (current_user.ssl_account && permitted_to?(:index, :billing_profiles))
        %li=link_to 'Billing Profiles', billing_profiles_path
      %li=link_to 'Deposit Funds', allocate_funds_url
      -if current_user.ssl_account.reseller
        %li
          =link_to 'Certificate Pricing', reseller_tier_url(current_user.ssl_account.reseller.reseller_tier.id)
      %li &nbsp;
      %li Filter Orders:
      %li=link_to Certificate.find_by_serial("basic256sslcom").title, filter_by_certificate_orders_path("basic")
      %li=link_to Certificate.find_by_serial("ev256sslcom").title, filter_by_certificate_orders_path("ev")
      %li=link_to Certificate.find_by_serial("ucc256sslcom").title, filter_by_certificate_orders_path("ucc")
      -if DEPLOYMENT_CLIENT=~/www.ssl.com/
        %li=link_to "Premium SSL", filter_by_certificate_orders_path("premium")
      %li=link_to Certificate.find_by_serial("wc256sslcom").title, filter_by_certificate_orders_path("wildcard")
      %li=link_to 'Test Orders (For Developers)', filter_by_scope_certificate_orders_path("is_test")
      -if current_user.is_admin?
        %li=link_to 'Chargebacks', filter_by_state_orders_path("charged_back")
        %li=link_to 'Refunds', filter_by_state_orders_path("fully_refunded")
      %li &nbsp;
      -#-if can?(:develop, CertificateOrder) || current_user.is_admin?
      %li Developers:
      %li=link_to "Developer Tools", developers_certificate_orders_url
