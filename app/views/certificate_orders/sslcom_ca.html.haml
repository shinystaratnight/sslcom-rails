-if current_user.is_system_admins?
  .reseller_registration_profile
    %h3 Issue SSL.com Certificate for Certificate Order #{@certificate_order.ref} (#{@certificate_order.certificate.validation_type.upcase})
    =form_tag sslcom_ca_certificate_order_path(@certificate_order) do
      #stylized.default_form
        %div(class='fields')
          .clearfix
            %label{for: 'cn'}
              *CN (Common name):
            -if @certificate_order.certificate.is_evcs? or @certificate_order.certificate.is_cs?
              =text_field_tag :cn, @certificate_order.csr.common_name
            -else
              %h3=@certificate_order.csr.common_name
          -if @certificate_order.certificate.is_ov? or @certificate_order.certificate.is_ev? or @certificate_order.certificate.is_cs? or @certificate_order.certificate.is_evcs?
            .clearfix
              %label{for: 'o'}
                *O (Organization):
                %span.label_desc organization or company name
              =text_field_tag :o
            .clearfix
              %label{for: 'ou'}
                OU (Organizational Unit):
              =text_field_tag :ou
            .clearfix
              %label{for: 'city'}
                *Locality:
                %span.label_desc * if city registered
              =text_field_tag :city
            .clearfix
              %label{for: 'state'}
                *Province:
                %span.label_desc * if state, province, or county registered
              =text_field_tag :state
            .clearfix
              %label{for: 'country'}
                *Country:
              =select_tag :country, options_for_select(Country.approved.collect {|c| [ c.name, c.iso1_code ] }.sort{|x,y|x[0]<=>y[0]})
            .clearfix
              %label{for: 'postal_code'}
                Postal Code:
                %span.label_desc postal code or zip
              =text_field_tag :postal_code
            -if @certificate_order.certificate.is_ov? or @certificate_order.certificate.is_ev?
              .clearfix
                %label{for: 'postal_address'}
                  Postal Address:
                  %span.label_desc postal address
                =text_field_tag :postal_address
            .clearfix
              %label{for: 'street_address'}
                *Street Address:
                %span.label_desc street address
              =text_field_tag :street_address
          -if @certificate_order.certificate.is_evcs? or @certificate_order.certificate.is_ev?
            .clearfix
              %label{for: 'business_category'}
                *Business Category:
              =select_tag :business_category, options_for_select(Joi::BUSINESS_CATEGORY.values)
            .clearfix
              %label{for: 'serial_number'}
                *Serial Number:
                %span.label_desc company registration number
              =text_field_tag :serial_number
            .clearfix
              %label{for: 'joi_country'}
                *Jurisdiction Country:
                %span.label_desc joi country
              =select_tag :joi_country, options_for_select(Country.approved.collect {|c| [ c.name, c.iso1_code ] }.sort{|x,y|x[0]<=>y[0]})
            .clearfix
              %label{for: 'joi_locality'}
                Jurisdiction Locality:
                %span.label_desc joi city
              =text_field_tag :postal_address
            .clearfix
              %label{for: 'joi_province'}
                Jurisdiction Province:
                %span.label_desc joi province, state or country
              =text_field_tag :joi_province
          .clearfix
            %label{for: 'csr'}
              *CSR (Certificate Signing Request):
            =text_area_tag :csr, @certificate_order.certificate_content.csr.body
          -unless @certificate_order.certificate.is_evcs? or @certificate_order.certificate.is_cs?
            .clearfix
              %label{for: 'san'}
                *SAN (Subject Alternative Names):
              =text_area_tag :san, @certificate_order.all_domains.join("\n"),readonly: true
      #button_container
        #next_submit=image_submit_tag "bl_submit_button.gif"
