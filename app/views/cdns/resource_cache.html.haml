=render :partial => 'index_scripts'
-content_for :title, title
-api_key = @results[:api_key]
-expire_time = @results[:expire_time]
-files = @results[:files]
#caches
  %hr
  #popular-files
    .sub-title Popular Files
    %table(cellspacing="0")
      %tr.heading_row
        %th Name of Files
        %th Bandwidth
        %th Hits
        %th Purge
