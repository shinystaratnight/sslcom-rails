    =render :partial => "shared/scripts_and_styles"
  %body
    =render partial: "layouts/facebook"
    -#=render partial: "layouts/uservoice"
    -if show_short_links?
      #answers(style="text-align: center;width: 100%; background-color: orange; padding: 2px 0; font-family: sans-serif; font-size: 1.2em; font-weight: bold;")
        Have a question or solution?
        =link_to "Be sure to visit the SSL.com IT Security Q&A free community site.", "http://answers.ssl.com", style: "text-decoration: underline; color: #111"
    #wrapper
      -if (current_user.blank?) || yield(:header)=='public' || yield(:header)=='public_wo_container'
        -unless current_subdomain==Reseller::SUBDOMAIN
          -if current_page?(action: "buy_now")
            =render :partial => '/layouts/public_new'
          -else
            =render :partial => '/layouts/public'
        -else
          =render :partial => '/layouts/public_resellers'
      -elsif (permitted_to?(:delete, User.last))
        =yield(:header)
        =render :partial => '/layouts/admin'
      -elsif current_user.ssl_account.is_registered_reseller?
        =yield(:header)
        =render :partial => '/layouts/reseller'
      -else
        =yield(:header)
        =render :partial => '/layouts/standard'
      .push
    #footer
      -if current_page? action: "buy_now"
        =render partial: '/layouts/footer_new'
      -else
        =render partial: '/layouts/footer'
