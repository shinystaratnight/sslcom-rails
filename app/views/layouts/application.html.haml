!!!
%html
  %head
    %link{:rel=>"shortcut icon", :href=>"/favicon.ico"}
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html;charset=utf-8"}

    %title= h(yield(:title).or_else(Settings.meta_title)) + " | SSL.com"
    -if @meta
      -@meta.each do |key|
        %meta{:name=>key[0], :content=>key[1]}
    %meta{ :name => "keywords", :content => h(yield(:keywords).or_else(Settings.meta_keywords))}
    %meta{ :name => "description", :content => h(yield(:description).or_else(Settings.meta_description)) }
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %meta{ :content => "IE=EmulateIE7", "http-equiv" => "X-UA-Compatible" }
    =csrf_meta_tag
    =render :partial => "shared/scripts_and_styles"
  %body
    #wrapper
      -if (current_user.blank?) || yield(:header)=='public'
        -unless current_subdomain==Reseller::SUBDOMAIN
          =render :partial => '/layouts/public'
        -else
          =render :partial => '/layouts/public_resellers'
      -elsif (permitted_to?(:delete, User.last))
        =yield(:header)
        =render :partial => '/layouts/admin'
      -elsif current_user.ssl_account.is_registered_reseller?
        =yield(:header)
        =render :partial => '/layouts/reseller'
      -else
        =yield(:header)
        =render :partial => '/layouts/standard'
    #footer
      =render partial: '/layouts/footer'
